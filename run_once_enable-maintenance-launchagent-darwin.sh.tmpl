#!/usr/bin/env bash

set -euo pipefail

PLIST="$HOME/Library/LaunchAgents/com.chezmoi.mac-dotfiles.maintenance.plist"

if [[ ! -f "$PLIST" ]]; then
    echo "â„¹ï¸  LaunchAgent plist missing, creating it at $PLIST"
    mkdir -p "$(dirname "$PLIST")"
    cat > "$PLIST" <<'EOF'
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.chezmoi.mac-dotfiles.maintenance</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>{{ .chezmoi.homeDir }}/.local/bin/mac-dotfiles-maintenance.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>4</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>{{ .chezmoi.homeDir }}/.local/state/mac-dotfiles/launchd.log</string>

    <key>StandardErrorPath</key>
    <string>{{ .chezmoi.homeDir }}/.local/state/mac-dotfiles/launchd.log</string>
</dict>
</plist>
EOF
fi

echo "ðŸ¤– Enabling daily maintenance LaunchAgent..."

launchctl bootout "gui/$(id -u)/com.chezmoi.mac-dotfiles.maintenance" 2>/dev/null || true
launchctl bootstrap "gui/$(id -u)" "$PLIST"
launchctl enable "gui/$(id -u)/com.chezmoi.mac-dotfiles.maintenance"

echo "âœ… LaunchAgent enabled: com.chezmoi.mac-dotfiles.maintenance"
echo "   Schedule: every day at 04:00 + at login"
